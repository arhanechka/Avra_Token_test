<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./parts/head %>
</head>
<header>
    <% include ./parts/header %>
</header>
<body class="container">
<form method="POST" action="/login">
    <fieldset>
        <legend>Login form</legend>

        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" name="logemail" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" data-cip-id="exampleInputEmail1">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="logpassword" id="exampleInputPassword1" placeholder="Password" data-cip-id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>
</body>
</html>
